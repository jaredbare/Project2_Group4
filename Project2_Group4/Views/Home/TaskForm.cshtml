@{
    ViewData["Title"] = "Mission Eight";
}
@model Project2_Group4.Models.TaskModel
<h1>Fill Out the Form</h1>
<br />
@*This is the task form that must be filled out by users*@

<div>
    <ul>Quadrant I: Important / Urgent</ul>
    <ul>Quadrant II: Important / Not Urgent</ul>
    <ul>Quadrant III: Not Important / Urgent</ul>
    <ul>Quadrant IV: Not Important / Not Urgent</ul>
</div>
<br />
<div>
    <form method="post">
        <label asp-for="Task">Task:</label>
        <input asp-for="Task" /><br />
        <label asp-for="Deadline">Deadline:</label>
        <input type="date" asp-for="Deadline" /><br />

        <label asp-for="Quadrant">Quadrant:</label>
        <select asp-for="Quadrant">
            <option value=1>1</option>
            <option value=2>2</option>
            <option value=3>3</option>
            <option value=4>4</option>
        </select><br />

        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select><br />
        <label asp-for="CategoryID">Category:</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select><br />
        <button type="submit">Submit Form</button>
    </form>
</div>