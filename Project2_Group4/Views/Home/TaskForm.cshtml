@{
    ViewData["Title"] = "Mission Eight";
}
@model Project2_Group4.Models.TaskModel
<h1>Fill Out the Form</h1>
@*This is the task form that must be filled out by users*@
<div>
    <form method="post">
        <label asp-for="Task">Task:</label>
        <input asp-for="Task" /><br />
        <label asp-for="Deadline">Deadline:</label>
        <input asp-for="Deadline" /><br />
        <label asp-for="Quadrant">Quadrant:</label>
        <input asp-for="Quadrant" /><br />
        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select><br />
        <label asp-for="CategoryID">Category:</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select><br />
        <button type="submit">Submit Form</button>
    </form>
</div>