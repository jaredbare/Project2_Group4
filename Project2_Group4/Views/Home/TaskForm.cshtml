@{
    ViewData["Title"] = "Mission Eight";
}
@model Project2_Group4.Models.TaskModel
<h1>Fill Out the Form</h1>
@*This is the task form that must be filled out by users*@
<div>
    <form method="post">
        <label asp-for="Task">Task:</label>
        <input asp-for="Task" /><br />
        <label asp-for="Deadline">Deadline:</label>
        <input asp-for="Deadline" /><br />
        <label asp-for="Quadrant">Quadrant:</label>
        <input asp-for="Quadrant" /><br />
        <label asp-for="Completed">Completed:</label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />
        <label asp-for="Category">Category:</label>
        <select asp-for="Category">
            <option value="Home">Home</option>
            <option value="School">School</option>
            <option value="Work">Work</option>
            <option value="Church">Church</option>
        </select><br />
        <button type="submit">Submit Form</button>
    </form>
</div>